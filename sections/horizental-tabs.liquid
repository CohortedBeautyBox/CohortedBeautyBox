			  <div class="panel acc__panel">
				<p>{{ section.settings.text4 }}</p>
			  </div>
			</div>
			<div class="acc__card">
			  <button class="accordion acc__title">{{ section.settings.text_head5 }} <img src="{{'arrow-right.png' | asset_img_url:'30x20'}}"></button>

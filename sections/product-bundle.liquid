  <script>
	$('.bundle-box').slick({
	  dots: true,
	  arrow: true,
	  speed: 300,
	  slidesToShow: 1,
	  slidesToScroll: 1,
	  customPaging : function(slider, i) {
		var thumb = $(slider.$slides[i]).data();
		return '<a>'+i+'</a>';
	  },
		responsive: [
	  {
		breakpoint: 1024,
		settings: {
		  slidesToShow: 1,
		  slidesToScroll: 1,
		  infinite: true,
		  dots: true
		}
	  },
	  {
		breakpoint: 600,
		settings: {
		  slidesToShow: 1,
		  slidesToScroll: 1
		}
	  },
	  {
		breakpoint: 480,
		settings: {
		  slidesToShow: 1,
		  slidesToScroll: 1
		}
	  }
  
	]
	});
  </script>


  <style>
	  .bundle-div .slick-dots {
    bottom: -23px!important;
    left: 10px;
}
.product-bundle .product-box.daynamic h4 {
    background: #fff;
    margin: 0 auto;
    max-width: 70%;
    padding-bottom: 20px;
}
.product-bundle .product-box.daynamic {
    margin-bottom: 13px;
}
.product-bundle .product-box.daynamic img {
    background-color: #fff;
    margin: 0 auto;
    max-width: 70%;
}
li.slick-active a {
    font-weight: bold;

}
.bundle-div ul li{
	font: normal normal normal 21px/25px Orelo SemiWide Medium;
letter-spacing: 1.05px;
}
.bundle-div .slick-dots li:last-child {
    visibility: visible;
}
.bundle-div .slick-dots li:first-child {
    visibility: visible;
}
.bundle-div .slick-dots li {
    visibility: hidden;
}
.product-bundle .grid-point-listd {
    margin-top: 20px;
}
.bundle-div h4 {
    font-size: 15px;
    line-height: 21px;
    font-family: 'Avenir LT Std 45 Book';
}
.bundle-div h2 {
    font: normal normal normal 70px/70px 'Austin';
    text-transform: capitalize;
}
.bundle-div p {
    font-size: 15px;
    line-height: 21px;
    font-family: 'Avenir LT Std 45 Book';
}
	.product-bundle .product-box-inner {
    display: flex;
    flex-wrap: wrap;
}
.image_block {
    margin-top: 0 !important;
}
.slick-arrow {
    z-index: 999;
}
.product-bundle .bundle-div {
    width: 50%;
}
.product-bundle .product-feature-image {
    width: 50%;
}
.bundle-div .grid-point-listd li {
    width: auto;
    padding: 0;
}
.bundle-div .slick-prev.slick-arrow {
    left: 15px;
    top: 100% !important;
    transform: translateX(150px);
    z-index: 1;
}
.bundle-div .slick-next.slick-arrow {
    right: 15px;
    top: 100% !important;
    transform: translateX(-150px);
}
}

.slick-next:before, .slick-prev:before {
    opacity: 1;
}

.bundle-div .slick-next:before {
		  content: url("{{'arrow-right.png' | asset_img_url:'25x20'}}") !important;
		}
		.bundle-div .slick-prev:before {
		  content: url("{{'arrow-left.png' | asset_img_url:'25x20'}}") !important;
		}
	@media(max-width:767px){
		.product-bundle .product-feature-image {
    width: 100%;
}
.product-bundle .product-box.daynamic img {
    max-width: 90%;
}
.product-bundle .product-box.daynamic h4 {
    max-width: 90%;
}
.product-bundle .grid-point-listd.bundle-box.slick-initialized.slick-slider.slick-dotted {
    display: flex;
    flex-wrap: wrap;
    margin-top: 0;
    padding-top: 20px;
}
.bundle-div h2 {
    font: normal normal normal 32px/32px'Austin';
    margin-bottom: 15px;
    padding-top: 20px;
}
.bundle-div .slick-next.slick-arrow {
    transform: translateX(-40px);
	top: 95% !important;
}
.bundle-div .slick-prev.slick-arrow {
    transform: translateX(40px);
	top: 95% !important;
}
.bundle-div .slick-dots {
    bottom: -3px!important;
}
.product-bundle .bundle-div {
    width: 100%;
}
		.swipe_coloum {
    flex-direction: column-reverse;
}
	}
  </style>
  
  {% schema %}
  {
	"name": "Dynamic Products",
	"class": "products-with-image product-bundle",
	  "max_blocks": 4,
	"settings": [
	{
        "type": "text",
        "id": "section_order",
        "label": "Swipe Section By Number"
	      },
	{
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      },
	{
      "type": "html",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
		{
			"id": "linktext",
			"type": "text",
			"label": "Button Text"		  },
		{
		"id": "link",
		"type": "url",
		"label": "Button Link"
		},
		{
				"type": "select",
				"id": "sectionOrder",
				"options": [
				  { "value": "orderOne", "label": "Primary Button"},
				  { "value": "orderTwo", "label": "secondary Button"},
				  { "value": "orderThree", "label": "secondary White Button"}
				],
				"label": "Button Color"
				},
	{
        "type": "image_picker",
        "id": "feature_image",
        "label": "Select Image"
	      },
		  {
			"type": "checkbox",
			"id": "swipe_coloum",
			"label": "Swipe coloumn Mob",
			"default": false
			  }
	],
	"blocks": [
	  {
		"type": "select",
		"name": "Add Product",
		"settings": [
		{
			"type": "product",
			"id": "featured_product",
			"label": "Select Product"
		  },
		  {
			"type": "image_picker",
			"id": "feature_image",
			"label": "Select Product Image"
		  }	
 
		]
	  }
	],
	"presets": [
	  {
		"name": "Product Bundle",
		"category": "Product Bundle",
		"blocks": [
		  { 
			"type": "select"
		  }
		
		]
	  }
	]
  }
  {% endschema %}
  
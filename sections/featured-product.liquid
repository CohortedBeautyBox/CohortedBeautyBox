{%- assign product = all_products[section.settings.featured_product] -%} 
<div class="single_product">
	<div class="row">
		<div style="padding:0;" class="col-md-6">
<div class="product-info">
	<div class="product-align-center">
<h2>{{ product.title }}</h2>
<div class="review-wrap">
	<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
  </div>
<div class="product-price"><div class="price-box">
	{% assign price = product.price | money %}
	{% if product.available %}
	{% if product.price_varies %}
	<p class="minimal-price"><span class="price-label">From:</span><span class="price">{{ price }}</span></p>
	{% else %}
	<p class="special-price"><span class="price">{{ price }}</span></p>
	{% endif %}
	{% if product.compare_at_price_max > product.price %}
	<p class="old-price"><span class="price-sep">-</span><span class="price">{{ product.compare_at_price | money }}</span></p>
	{% endif %}
	{% else %}
	{% if product.price_varies %}
	<p class="minimal-price"><span class="price-label">From:</span><span class="price">{{ price }}</span></p>
	{% else %}
	<span class="regular-price"><span class="price">{{ price }}</span></span>
	{% endif %}
	{{ 'products.product.sold_out_html' | t }}
	{% endif %}
  </div></div>
  <div class="product-discription">
	 {{ product.description | strip_html | truncate: 200}}
  </div>
  <div class="save">SUBSCRIBE AND <span class="color">SAVE Â£12.99 - ORDER WILL SHIP EVERY MONTH</span></div>
<div class="more-info"><a href="{{product.url}}">More Information</a></div>
<div class="text-left"><a class="secondary-btn white" href="">COMPLETE SUBSCRIPTION</a></div>
</div>
</div>
</div>	
<div style="padding:0;" class="col-md-6">
<div  class="feature-image">

	{% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}

	<img src="{{ featured_image | img_url: 'master' }}" alt="{{ featured_image.alt }}" id="FeaturedImage-{{ section.id }}" class="product-featured-img">

</div>
</div>
</div>
</div>

<style>
	.product-info { 
	background-image: url({{section.settings.background_info | img_url: 'master'}});
    background-size:cover;
}
</style>
{% schema %}
  {
    "name": "Feature Product", 
    "settings": [
	{
        "type": "product",
        "id": "featured_product",
        "label": "Product"
      }	,
{
        "type": "image_picker",
        "id": "background_info",
        "label": "Info Image"
      }	

],
 
  "presets": [
    {
      "name": "Feature Product"   
    }
]
  }
{% endschema %}
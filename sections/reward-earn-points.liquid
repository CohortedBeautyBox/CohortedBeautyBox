
<div class="reward-earn-points">
	<div class="container">
		<ul class="grid-point-list">
			<div class="text-container-wrapper">
				<h2>{{ section.settings.title }}</h2>
				<div class="description-before"><span></span>{{ section.settings.text }}</div>
			  </div>

			  {% for block in section.blocks %}  
			  <li><div class="point-box">
				  <div class="number-box">{{ block.settings.link }}</div>
				  <div>{{ block.settings.linktext }}</div>
			  </div></li>
			  {% endfor %}
			
		</ul>

	</div>
  </div>
  <style>
	  .reward-earn-points {
    background: #F1F1F1;
	padding: 80px 0;
}
.number-box {
    width: 80px;
    height: 80px;
    box-shadow: 0px 15px 24px #DCDCDC;
    border-radius: 80px;
    font: normal normal normal 32px/84px 'Austin';
    margin-bottom: 20px;
	letter-spacing: 3.2px;

}
ul.grid-point-list li {
    width: 25%;
    padding: 10px;
    display: flex;
    align-items: center;
}
ul.grid-point-list {
    display: flex;
    flex-wrap: wrap;
}
.point-box {
    background: #fff;
    width: 100%;
    justify-content: center;
    height: 309px;
    align-items: center;
    display: flex;
    font-size: 15px;
    line-height: 24px;
    padding: 20px;
    flex-wrap: wrap;
    flex-direction: column;
}
.point-box h5 {
    letter-spacing: 1.2px;
    font-size: 24px;
    line-height: 34px;
    font-family: 'Austin';
    margin-top: 20px;
	margin-bottom: 0;
}
  </style>
  {% schema %}
  {
	"name": "Reward Grid Boxes",
	  "max_blocks": 6,
	"settings": [
	{
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      },
	{
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    }
	],
	"blocks": [
	  {
		"type": "select",
		"name": "Add Box",
		"settings": [
		  {
			"id": "link",
			"type": "text",
				 "label": "Number Text"
		  },
		  {
			"id": "linktext",
			"type": "html",
			"label": "Point Box Content"		  }
		]
	  }
	],
	"presets": [
	  {
		"name": "Reward Grid Boxes",
		"category": "Earn Points",
		"blocks": [
		  { 
			"type": "select"
		  },
		  {
			"type": "select"
		  }
		]
	  }
	]
  }
  {% endschema %}
  
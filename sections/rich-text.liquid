<div class="rich-text">
	<div class="containers">
		{% if section.settings.text != blank %}
	  <div class="rich-content">
		<h2 class="heading">{{ section.settings.title }}</h2>
		<h5 class="content">{{ section.settings.text }}</h5>
	  </div>
	  {% endif %}
	  <ul class="buttons-section">
		{% if section.settings.button_primary != blank %}
		<li>
			
		  <a class="primary-btn" href="{{ section.settings.button_primary_url }}">
			  {{ section.settings.button_primary }}</a>
		 
		</li>
		{% endif %}
		{% if section.settings.button_secondary != blank %}
		<li>
			
		  <a class="secondary-btn" href="{{ section.settings.button_secondary_url }}">
			  {{ section.settings.button_secondary }}</a>
		 
		</li>
		{% endif %}
	  </ul>
	  <div class="section-image">	
		{% if section.settings.feature_image != blank %}
		<img class="show-desktops" src="{{ section.settings.feature_image | img_url:'master'}}">
		{% endif %}
		{% if section.settings.feature_mobile != blank %}
		<img class="show-mobs" src="{{ section.settings.feature_mobile | img_url:'master'}}">
		{% else %}
		<img class="show-mobs" src="{{ section.settings.feature_image | img_url:'master'}}">
		{% endif %}

	</div>
	
	</div>
  </div>

  <style>
	  img.show-desktops {
    display: none;
}
	  .rich-text .text-container.full-width {
    max-width: 100% !important;
}
.rich-text-main {
    padding-top: 70px;
}
h2.heading {
    font: normal normal normal 80px/85px Austin;
    letter-spacing: 4px;
    color: #000000;
    text-transform: capitalize;
}
.content{font: normal normal normal 15px/24px Avenir Next LT Pro;
letter-spacing: 0.75px;
color: #464646;
}
h5.content {
    letter-spacing: 0.75px;
    color: #464646;
    font-size: 15px;
    line-height: 24px;
    font-family: 'AVENIR LT STD 45 BOOK';
    margin: 40px 0 30px 0;
}

.section-image img {
    width: 100%;
}
@media(max-width:767px){

	img.show-desktops {
    display: block;
}
img.show-mobs {
    display: none;
}

}
  </style>
  {% schema %}

  {
	"name": "Rich Text",
	"class": "rich-text-main",
	
	"settings": [
	{
		"type": "text",
		"id": "title",
		"label": "Title"
	  },
	  {
		"type": "html",
		"id": "text",
		"label": "Text"
	  },
	  {
		"type": "text",
		"id": "button_primary",
		"label": "Primary Button Text"
	  },
	  {
		"type": "url",
		"id": "button_primary_url",
		"label": "Primary Button URL"
	  },
	  {
		"type": "text",
		"id": "button_secondary",
		"label": "Secondary Button Text"
	  },
	  {
		"type": "url",
		"id": "button_secondary_url",
		"label": "Secondary Button URL"
	  },
	  {
		"type": "image_picker",
		"id": "feature_image",
		"label": "Select Image"
		  },
		  {
			"type": "image_picker",
			"id": "feature_mobile",
			"label": "Select Mob Image"
			  }
	],
	"presets": [
	  {
		"name": "Rich Text",
		"category": "Text"
	  }
	]
  }
  {% endschema %}
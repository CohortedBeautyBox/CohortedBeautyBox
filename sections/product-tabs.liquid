    color: #464646;
    font: normal normal normal 18px/28px Avenir Next LT Pro;
	text-align: left;
}

.resp-vtabs ul.resp-tabs-list {
    width: 100%;
    border: none;
    padding: 70px;
}
.product-tabs-parent {
    display: grid;
    grid-template-columns: 1fr 1fr;

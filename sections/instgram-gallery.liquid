<div class="section-insta">
  <div class="section-header text-center">
    <h2> {{ section.settings.text-box }} </h2>
  </div>
	<div class="container">
	<div class="insta-main">   
  {% for block in section.blocks %}  
  <div class="insta-block">   
    <a href="{{ block.settings.link }}" class="btn">
		<img src="{{ block.settings.insta_img | img_url:'master' }}">
		<h4>{{ block.settings.insta_title }}</h4>
		<p>{{ block.settings.linktext }}</p>
		</a>
  </div> 
  {% endfor %}
</div>  
</div>  
</div>
  <style>

.section-insta {
    padding-bottom: 70px;
}
.insta-main .slick-track{
  width: 100%;
}
.insta-block h4 {
    font: normal normal normal 24px/34px 'Austin';
    letter-spacing: 1.2px;
    margin-top: 30px;
    text-transform: capitalize;
}
.insta-block p {
    font: normal normal normal 15px/24px Avenir Next LT Pro;
    letter-spacing: 0.75px;
    text-transform: lowercase;
    color: #464646;
}
.insta-block {
    padding: 0 10px;
}
.insta-block a {
    padding: 0;
}
.insta-block a {
    width: 100%;
}
.insta-block img {
    width: 100%;
}
.section-insta h2 {
    font: normal normal normal 80px/112px 'Austin';
    text-transform: capitalize;
    margin-bottom: 30px;
}
.section-insta h2 {
    font: normal normal normal 32px/32px Austin!important;
}
@media(max-width:767px){
  .section-insta {
    padding-bottom: 30px;
}
  .insta-block {
    width: auto;
}
}
  </style>

<script>
  $('.insta-main').slick({
    dots: false,
    arrow: false,
    speed: 300,
    slidesToShow: 3,
    slidesToScroll: 1,
      responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        dots:true
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        dots:true
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
  });
</script>

{% schema %}
{
  "name": "Socail Media",
	"max_blocks": 3,
  "settings": [
  {
		"id": "text-box",
		"type": "text",
		"label": "Heading Here"
		  }
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Add Block",
      "settings": [
	  {
		"id": "insta_img",
		"type": "image_picker",
		"label": "Select Image"
		  },
	  {
		"id": "insta_title",
		"type": "text",
	    "label": "Title"
	  },
	  {
		"id": "linktext",
		"type": "text",
		"label": "text"
	  },
        {
          "id": "link",
          "type": "url",
       		"label": "Block link"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Socail Media",
      "category": "Socail Media",
      "blocks": [
        { 
          "type": "select"
        },
        {
          "type": "select"
        }
      ]
    }
  ]
}
{% endschema %}
	<script>
	  $('.cult-collection').slick({
		dots: true,
		arrow: true,
		speed: 300,
		slidesToShow: 1,
		slidesToScroll: 1,
		customPaging : function(slider, i) {
		var thumb = $(slider.$slides[i]).data();
		return '<a>'+i+'</a>';
		},
		  responsive: [

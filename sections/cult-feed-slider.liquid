 
<div style="background-color:{{ section.settings.bag-color }};" class="testimoni-main">
	<div class="container">
		{% if block.settings.title != 'blank'%}
		<div class="text-container-wrapper full-width">
		  <h2>{{ section.settings.title }}</h2>
		  {{ section.settings.text }}
		  <a class="{{ section.settings.btn_class }}" href="{{ section.settings.link }}">{{ section.settings.linktext }}</a>
			</div>
			{% endif %}
			
		   <div class="feature-collection cult-collection">   
			{% for block in section.blocks %} 	
		  <div class="feature-item">
			  {% if block.settings.featured_image != 'blank'%}
		<div class="product-image">
			<img class="testimonila-image" src="{{ block.settings.featured_image | img_url: 'master' }}" >
		  </div>
		  <div class="slider-content">
			  <h3>Cult Feed</h3>
			  <p>Explore eloquent opinion pieces on lifestyle, fashion, beauty and more..</p>
		  </div>
		  {% endif %}
	  </div> 
	  {% endfor %}
		   </div>
		  </div>
	</div>
